{
    "name": "drupol/phpcsfixer-configs-php",
    "description": "Base PHP CS Fixer configurations.",
    "license": "MIT",
    "type": "library",
    "authors": [
        {
            "name": "Pol Dellaiera",
            "email": "pol.dellaiera@protonmail.com"
        }
    ],
    "require": {
        "php": ">= 7.1.3",
        "friendsofphp/php-cs-fixer": "^2.16.1",
        "symfony/yaml": "^3 || ^4 || ^5"
    },
    "autoload": {
        "psr-4": {
            "drupol\\PhpCsFixerConfigsPhp\\": "./src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "drupol\\PhpCsFixerConfigsPhp\\Tests\\": "./tests/"
        }
    },
    "config": {
        "sort-packages": true
    },
    "require-dev": {
        "friends-of-phpspec/phpspec-code-coverage": "^4.3.2",
        "infection/infection": "^0.13.6 || ^0.14.4 || ^0.15.0",
        "phpro/grumphp": "^0.16.2 || ^0.17.0",
        "phpspec/phpspec": "^5.1.2 || ^6.1.1",
        "phptaskman/changelog": "^1.0",
        "scrutinizer/ocular": "^1.6"
    },
    "scripts": {
        "grumphp": "./vendor/bin/grumphp run",
        "infection": "./vendor/bin/infection run -j 10",
        "scrutinizer": "./vendor/bin/ocular code-coverage:upload --format=php-clover build/logs/clover.xml"
    }
}
